{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
   <div class="wrapper">
			<div class="inner">
				<form method="post">
					<h3>Brazil Burger</h3>
                    
					<label class="form-group-f">
						<input type="email" name="email" class="form-control-f" value="{{ last_username }}" autocomplete="email" required autofocus>
						<span>Entrer Votre Mail</span>
						<span class="border"></span>
					</label>
					<label class="form-group-f">
						<input type="password" name="password" class="form-control-f" autocomplete="current-password"  required>
						<span for="">Entrer Votre Password</span>
						<span class="border"></span>
					</label>
                    <input type="hidden" name="_csrf_token"
		            value="{{ csrf_token('authenticate') }}">
					<button type="submit" name="connect" >Submit 
						<i class="zmdi zmdi-arrow-right"></i>
					</button>
				</form>
			</div>
		</div>
 
 
{% endblock %}