 {% extends 'admin/admin.html.twig' %}

{% block title %}Hello BurgerController!
{% endblock %}

{% block body %}
{{ parent() }}
	<div class="container mt-5"style="width: 30rem;">
		<div class="card text-left">
			<img class="card-img-top" src="holder.js/100px180/" alt="">
			<div class="card-body">
				<h4 class="card-title">Ajouter un Menu</h4>
				{{form_start(form)}}
				<div class="form-group">
					<label for="exampleInputEmail1">Nom Menu</label>
					{{form_widget(form.nom)}}
					<small id="emailHelp" class="form-text text-danger">{{form_errors(form.nom)}}</small>
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Burger</label>
					{{form_widget(form.burger)}}
					<small id="emailHelp" class="form-text text-danger">{{form_errors(form.burger)}}</small>
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Nom Menu</label>
					{{form_widget(form.complement)}}
					<small id="emailHelp" class="form-text text-danger">{{form_errors(form.complement)}}</small>
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Image Menu</label>
					{{form_widget(form.image)}}
					<small id="emailHelp" class="form-text text-danger"></small>
				</div>
                
                
					{{form_widget(form.valider)}}

				{{form_end(form)}}

			</div>
		</div>
	</div>

{% endblock %}
				